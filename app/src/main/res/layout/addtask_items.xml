<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#57F3E5F5">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/addtask_item_name"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:layout_toRightOf="@id/addtask_item_name"
                android:padding="5dp"
                android:id="@+id/date_addtask_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE AND TIME"
                android:textSize="12sp"
                android:textColor="#AD111111" />
        <TextView
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_below="@id/addtask_item_name"
            android:id="@+id/desc_addtask_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:id="@+id/delete_item_task"
            android:src="@drawable/ic_delete_white_24dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#65111111" />
</LinearLayout>